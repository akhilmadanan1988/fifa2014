<?xml version='1.0' encoding='utf-8'?>
<widget id="com.neologix.fifa" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Fifa 2014</name>
    <description>
        Fifa 2014
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
       Fifa 2014
    </author>
    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    
    <feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.NetworkManager" />
	</feature>
    <icon src="icon.png" />
   <!-- icon screen Android-->
	<icon src="images/icon.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="images/splash.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/splash.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/splash.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="images/splash.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="images/splash.jpg" gap:platform="winphone" />
    
    <access origin="http://127.0.0.1*" />
</widget>














<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.neologix.fifa"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Fifa 2014</name>
    <description>
        Fifa 2014
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
       Fifa 2014
    </author>
        
	 <!-- Internet connection -->
	<feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.NetworkManager" />
	</feature>
	
	<feature name="Network Status">
    <param name="blackberry-package" value="org.apache.cordova.network.Network" />
	</feature>
	
	<feature name="NetworkStatus">
    <param name="ios-package" value="CDVConnection" />
	</feature>
	
	<Capabilities>
    <Capability Name="ID_CAP_NETWORKING" />
	</Capabilities>
	
	
	  <!-- Splash screen ios-->
	<gap:splash src="images/splash.png" gap:platform="ios" width="2048" height="1496" />
	<gap:splash src="images/splash/ios/splash.png" gap:platform="ios" width="1536" height="2008" />
	
	<!-- Splash screen Android-->
	<gap:splash src="images/splash.png"  gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/splash.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/splash.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="images/splash.png" gap:platform="android" gap:density="xhdpi" />

	<!-- Splash screen Blackberry-->
	<gap:splash src="images/splash.png" gap:platform="blackberry" />
	
	<!-- Splash screen Windows phone-->
	<gap:splash src="images/splash.png" gap:platform="winphone" />
	
	 <!-- icon screen ios-->
	<icon src="icon.png" gap:platform="ios" width="114" height="114" />
	
	<!-- icon screen Android-->
	<icon  src="icon.png" gap:platform="android" gap:density="xhdpi" />
	
	
	
	
	
	</widget>
